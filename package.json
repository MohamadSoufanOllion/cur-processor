{
  "name": "cur-processor",
  "version": "0.1.0",
  "bin": {
    "cur-processor": "bin/cur-processor.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "local-synth": "npm run build && cdk synth --no-staging > template.yaml --profile hearst",
    "bootstrap": "cdk bootstrap --profile hearst",
    "bootstrap-role": "cdk bootstrap --profile hearst --role-arn arn:aws:iam::959584429587:role/AccessADMIN",
    "deploy": "cdk deploy --profile hearst",
    "local-synth-joey": "npm run build && cdk synth --no-staging > template.yaml --profile joey",
    "deploy-joey": "cdk deploy --profile joey"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
