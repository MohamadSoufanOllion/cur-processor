    "aws-cdk": "^2.160.0",
    "esbuild": "^0.24.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.5"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.658.1",
    "@aws-sdk/client-ses": "^3.658.1",
    "aws-cdk-lib": "^2.160.0",
    "axios": "^1.7.7",
    "constructs": "^10.3.0",
